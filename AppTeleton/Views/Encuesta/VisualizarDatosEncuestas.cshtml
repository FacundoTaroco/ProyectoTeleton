@model DatosEncuestasViewModel;
@{
    if (ViewBag.Mensaje != null)
    {
        if (ViewBag.TipoMensaje == "ERROR")
        {
            <div class="alert alert-danger" role="alert">@ViewBag.Mensaje</div>
        }
        else if (ViewBag.TipoMensaje == "EXITO")
        {
            <div class="alert alert-success" role="alert">@ViewBag.Mensaje</div>
        }

    }
}


<div>
    <canvas id="satisfaccionChart" width="400" height="200"></canvas>
</div>


<ul id="listadoComentarios">
    @foreach (var c in Model.ComentariosEncuestas)
    {
        
    <li>
        <div>
            <p>Puntuacion General: @c.SatisfaccionGeneral</p>
            <p>Fecha: @c.Fecha.Date</p>
            <p>Comentario: @c.Comentario</p>
        </div>
    </li>}
    
</ul>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    var ctx = document.getElementById('satisfaccionChart').getContext('2d');
    var chart = new Chart(ctx, {
        type: 'bar', 
        data: {
            labels: ['General', 'Aplicación', 'Recepción', 'Estado del Centro'], // Etiquetas
            datasets: [{
                label: 'Encuestas de satisfacción',
                data: [
    @Model.PromedioSatisfaccionGeneral,
    @Model.PromedioSatisfaccionAplicacion,
    @Model.PromedioSatisfaccionRecepcion,
    @Model.PromedioSatisfaccionEstadoCentro
                        ],
                backgroundColor: [
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(255, 99, 132, 0.2)'
                ],
                borderColor: [
                    'rgba(75, 192, 192, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(255, 99, 132, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true,
                    min: 1, // Rango mínimo del eje Y
                    max: 5  // Rango máximo del eje Y
                }
            }
        }
    });
</script>
