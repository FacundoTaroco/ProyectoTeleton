@model LogicaNegocio.Entidades.Encuesta

@{
    ViewData["Title"] = "Create";
    string usuario = Context.Session.GetString("USR");
}
@{
    if (ViewBag.Mensaje != null)
    {
        if (ViewBag.TipoMensaje == "ERROR")
        {
            <div class="alert alert-danger" role="alert">@ViewBag.Mensaje</div>
        }
        else if (ViewBag.TipoMensaje == "EXITO")
        {
            <div class="alert alert-success" role="alert">@ViewBag.Mensaje</div>
        }

    }
}
<h1>Create</h1>

<h4>Encuesta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <input type="hidden" value="@usuario" name="nombreUsuario">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label>¿Cual es su satisfaccion con el servicio de recepcion?</label><br>
            @for (int i = 1; i <= 5; i++)
            {
                <label>
                    <input type="radio" asp-for="SatisfaccionRecepcion" value="@i" /> @i
                </label>
            }
            <label>
                <input type="radio" asp-for="SatisfaccionRecepcion" value="0" /> No contesta
            </label>

            <label>¿Cual es su satisfaccion con el estado del establecimiento?</label><br>
            @for (int i = 1; i <= 5; i++)
            {
                <label>
                    <input type="radio" asp-for="SatisfaccionEstadoDelCentro" value="@i" /> @i
                </label>
            }
            <label>
                <input type="radio" asp-for="SatisfaccionEstadoDelCentro" value="0" /> No contesta
            </label>

            <label>¿Cual es su satisfaccion con la aplicacion de asistencia?</label><br>
            @for (int i = 1; i <= 5; i++)
            {
                <label>
                    <input type="radio" asp-for="SatisfaccionAplicacion" value="@i" /> @i
                </label>
            }
            <label>
                <input type="radio" asp-for="SatisfaccionAplicacion" value="0" /> No contesta
            </label>


            <label>¿Cual es su satisfaccion general?</label><br>
            @for (int i = 1; i <= 5; i++)
            {
                <label>
                    <input type="radio" asp-for="SatisfaccionGeneral" value="@i" /> @i
                </label>
            }
            <label>
                <input type="radio" asp-for="SatisfaccionGeneral" value="0" /> No contesta
            </label>

            <div class="form-group">
                <label asp-for="Comentarios" class="control-label"></label>
                <textarea asp-for="Comentarios" class="form-control"></textarea>
                <span asp-validation-for="Comentarios" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

