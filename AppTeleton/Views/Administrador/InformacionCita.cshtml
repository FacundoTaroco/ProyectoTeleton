@model LogicaNegocio.DTO.CitaMedicaDTO

@{
    ViewData["Title"] = "Informacion de la Cita";
}

<h1>Información de la Cita</h1>

<p><strong>Nombre del Paciente:</strong> @Model.NombreCompleto</p>
<p><strong>Cédula:</strong> @Model.Cedula</p>
<p><strong>Tratamiento:</strong> @Model.Servicio</p>
<p><strong>Fecha:</strong> @Model.Fecha.ToShortDateString()</p>
<p><strong>Hora:</strong> @Model.HoraInicio</p>

<p><strong>Detalles:</strong></p>
<p>@Model.Detalles</p>

<a asp-action="EditarCita" asp-route-id="@Model.PkAgenda" class="btn btn-primary">Editar</a>
