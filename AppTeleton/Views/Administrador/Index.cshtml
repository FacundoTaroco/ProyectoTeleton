@model AppTeleton.Models.UsuariosViewModel;


@{
    ViewData["Title"] = "Index";
}
@{
    if (ViewBag.Mensaje != null)
    {
        if (ViewBag.TipoMensaje == "ERROR")
        {
            <div class="alert alert-danger" role="alert">@ViewBag.Mensaje</div>
        }
        else if (ViewBag.TipoMensaje == "EXITO")
        {
            <div class="alert alert-success" role="alert">@ViewBag.Mensaje</div>
        }

    }

}



<form method="get" action="@Url.Action("VerTipoUsuario", "Administrador")">
    <label for="opcion">Seleccione el tipo de usuario</label>
    <select name="opcion" onchange="this.form.submit()">

        @if (ViewBag.TipoUsuario == "PACIENTE")
        {
            <option value="paciente" selected>Pacientes</option>
        }
        else
        {
            <option value="paciente">Pacientes</option>
        }
        @if (ViewBag.TipoUsuario == "RECEPCIONISTA")
        {
            <option value="recepcionista" selected>Recepcionistas</option>
        }
        else
        {
            <option value="recepcionista">Recepcionistas</option>
        }
        @if (ViewBag.TipoUsuario == "MEDICO")
        {
            <option value="medico" selected>Medicos</option>
        }
        else
        {
            <option value="medico">Medicos</option>
        }
        @if (ViewBag.TipoUsuario == "ADMIN")
        {
            <option value="admin" selected>Administradores</option>
        }
        else
        {
            <option value="admin">Administradores</option>
        }
    </select>
</form>


@if (ViewBag.TipoUsuario == "PACIENTE")
{
    <h1>Pacientes</h1>

<form asp-action="ActualizarPacientes" method="post">

     <div class="form-group">
