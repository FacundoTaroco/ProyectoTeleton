
@model AccesoTotemViewModel;

@{
    ViewData["Title"] = "HomeUsuario";
  

}
    <div class="container-fluid">
        @if (ViewBag.Mensaje != null)
        {
            if (ViewBag.TipoMensaje == "ERROR")
            {
                <div class="alert alert-danger" role="alert">@ViewBag.Mensaje</div>
            }
            else if (ViewBag.TipoMensaje == "EXITO")
            {
                <div class="alert alert-success" role="alert">@ViewBag.Mensaje</div>
            }
        }

        <div class="row">
          
            

            <div class="col-md-2 text-white full-height sidebar">
                <div>
                  
                    <h3>Men√∫</h3>
                    <ul class="list-unstyled">
                        <li><a asp-action="HomeUsuario" asp-route-cedula ="@ViewBag.CedulaUsuario" class="text-white"><i class="fas fa-calendar-alt"></i> Tratamientos para hoy</a></li>
                        <li><a asp-action="PreguntasParaTotem" class="text-white"><i class="fas fa-question-circle"></i> Preguntas frecuentes</a></li>
                        <li><a class="text-white"><i class="fas fa-map-marker-alt"></i> Mapa del centro</a></li>
                    </ul>
                </div>
                <div>
                    <ul class="list-unstyled">
                        <li><a href="@Url.Action("CerrarAcceso", "Totem")" class="text-white"><i class="fas fa-sign-out-alt"></i>Salir</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-md-10 content">
                <div id="time" class="alert alert-danger" role="alert"></div>
                <h3>Tratamientos para hoy</h3>
      
                @if (Model.Citas != null && Model.Citas.Count()>0){
                <table class="table table-bordered mt-3">
                    <thead>
                        <tr>
                            <th>
                                Servicio
                            </th>
                            <th>
                               Tratamiento
                            </th>
                            <th>
                               Fecha
                            </th>
                            <th>
                               Hora
                            </th>   
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Citas)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Servicio)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Tratamiento)
                                </td>
                                <td>
                                    @item.Fecha.Date
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.HoraInicio) hs
                                </td>
                            </tr>
                        }
                    </tbody>
                    </table>
                }
                else
                {
                    
                <h4>No tiene citas agendadas para el dia actual, consulte en recepcion en caso de que esto sea un error</h4>
                }
            </div>
        </div>
    </div>

    

    <script src="~/js/timerAcceso.js"></script>

    <form asp-action="Index" id="formCerrarSesionAutomaticamente"></form>



