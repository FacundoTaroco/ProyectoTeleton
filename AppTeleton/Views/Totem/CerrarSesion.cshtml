@model Application.Models.TotemViewModel

@{
    ViewData["Title"] = "Cerrar Sesión";
    Layout = null; // Si tenemos un layout general, tenemos que cambiar esto por el nombre del layout
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - My ASP.NET Application</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f4f4f4;
        }

        .logout-container {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

            .logout-container h3 {
                margin-bottom: 20px;
            }

            .logout-container form {
                display: flex;
                flex-direction: column;
            }

            .logout-container label {
                margin-bottom: 5px;
            }

            .logout-container input {
                margin-bottom: 10px;
                padding: 10px;
                border: 1px solid #ccc;
                border-radius: 4px;
            }

            .logout-container button {
                padding: 10px;
                background-color: #ff0000;
                color: white;
                border: none;
                border-radius: 4px;
                cursor: pointer;
            }

                .logout-container button:hover {
                    background-color: #cc0000;
                }
    </style>
</head>
<body>
    <div class="logout-container">
        <h3>Cerrar Sesión</h3>
        <form asp-action="CerrarSesion" method="post">
            <label for="NombreUsuario">Nombre de Usuario</label>
            <input type="text" id="NombreUsuario" name="NombreUsuario" required />

            <label for="Contrasenia">Contraseña</label>
            <input type="password" id="Contrasenia" name="Contrasenia" required />

            <button type="submit">Cerrar Sesión</button>
        </form>
    </div>
</body>
</html>
