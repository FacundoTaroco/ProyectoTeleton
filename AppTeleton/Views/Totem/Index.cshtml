
@{
    ViewData["Title"] = "Index";
    if (ViewBag.Mensaje != null)
    {
        if (ViewBag.TipoMensaje == "ERROR")
        {
            <div class="alert alert-danger" role="alert" style="position: fixed; top: 0; left: 50%; transform: translateX(-50%);">@ViewBag.Mensaje</div>
        }
        else if (ViewBag.TipoMensaje == "EXITO")
        {
            <div class="alert alert-success" role="alert" style="position: fixed; top: 0; left: 50%; transform: translateX(-50%);">@ViewBag.Mensaje</div>
        }

    }
}


<img src="~/images/LogoTeleton.png" class="logoTeletonIndexTotem">
<div class="contenedorIndexTotem container">

<img src="~/images/logoTeletonRecepcion.png" class="imagenTeletonRecepcion row">
    <h1 class="h1Totem row">Bienvenido, Ingrese la cedula del paciente para acceder</h1>

<img src="~/images/cedulaGenerica.png" class="imagenCedulaGenerica row">

<form asp-action="Acceder" asp-controller="Totem" method="post" id="formularioIndexTotem" class="row col-6 justify-content-center align-items-center">

        
        <input name="cedula" class="form-control" type="text" placeholder="Ingrese la cedula aquí" required />
 

    <input class="btn" type="submit" value="Acceder" />
    </form>


    
    <a href="@Url.Action("CerrarSesion", "Totem")" class="text-black btnCerrarSesionTotem"><i class="fas fa-sign-out-alt"></i></a>
</div>

