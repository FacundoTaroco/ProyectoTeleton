@model AppTeleton.Models.UsuariosViewModel;


@{
    ViewData["Title"] = "Index";
}
@{
    if (ViewBag.Mensaje != null)
    {
        if (ViewBag.TipoMensaje == "ERROR")
        {
            <div class="alert alert-danger" role="alert">@ViewBag.Mensaje</div>
        }
        else if (ViewBag.TipoMensaje == "EXITO")
        {
            <div class="alert alert-success" role="alert">@ViewBag.Mensaje</div>
        }

    }
}

@{
    ViewData["Title"] = "Index";
    Layout = null; // Si tienes un layout general, cambia esto por el nombre del layout
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - My ASP.NET Application</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        .container {
            display: flex;
        }
        .sidebar {
            width: 20%;
            background-color: #ff0000;
            padding: 20px;
            color: white;
        }
        .sidebar ul {
            list-style-type: none;
            padding: 0;
        }
        .sidebar ul li {
            margin: 10px 0;
        }
        .sidebar ul li a {
            color: white;
            text-decoration: none;
        }
        .sidebar ul li a:hover {
            text-decoration: underline;
        }
        .content {
            width: 80%;
            padding: 20px;
        }
        .content table {
            width: 100%;
            border-collapse: collapse;
        }
        .content table, .content th, .content td {
            border: 1px solid black;
        }
        .content th, .content td {
            padding: 10px;
            text-align: left;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="sidebar">
            <h3>Menú</h3>
            <ul>
                <li><a href="#">Tratamientos para hoy</a></li>
                <li><a href="#">Preguntas frecuentes</a></li>
                <li><a href="#">Mapa del centro</a></li>
                <li style="margin-top: auto;"><a href="@Url.Action("CerrarSesion", "Home")">Cerrar sesión</a></li>
            </ul>
        </div>
        <div class="content">
            <h3>Tratamientos para hoy</h3>
            <form asp-action="ActualizarCitas" method="post">
                <input type="submit" value="Actualizar Citas" class="btn btn-primary" />
            </form>

            <table>
                <thead>
                    <tr>
                        <th>Nombre Tratamiento</th>
                        <th>Hora</th>
                        <th>Nombre Medico</th>
                        <th>Cuarto</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Citas)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.NombreTratamiento)</td>
                            <td>@Html.DisplayFor(modelItem => item.Hora)</td>
                            <td>@Html.DisplayFor(modelItem => item.NombreMedico)</td>
                            <td>@Html.DisplayFor(modelItem => item.Cuarto)</td>
                            <td>
                                @Html.ActionLink("Mostrar en mapa", "Mostrar", new { id = item.Id }, new { @class = "btn btn-link" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>

