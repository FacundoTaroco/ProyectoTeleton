@{
    ViewData["Title"] = "Cambiar Contraseña";
}

<h1>Cambiar Contraseña</h1>

@if (ViewBag.Mensaje != null)
{
    if (ViewBag.TipoMensaje == "ERROR")
    {
        <p class="alert alert-danger">@ViewBag.Mensaje</p>
    }
    else if (ViewBag.TipoMensaje == "EXITO")
    {
        <p class="alert alert-success">@ViewBag.Mensaje</p>
    }
}

<form asp-action="CambiarContrasenia" method="post">
    <input type="hidden" name="id" value="@ViewBag.IdUsuario" /> <!-- Campo oculto para el id -->

    <table class="table">
        <tr>
            <td><label for="nuevaContrasenia">Nueva Contraseña</label></td>
            <td>
                <input type="password" class="form-control" id="nuevaContrasenia" name="nuevaContrasenia" required>
            </td>
        </tr>
        <tr>
            <td><label for="confirmarContrasenia">Confirmar Nueva Contraseña</label></td>
            <td>
                <input type="password" class="form-control" id="confirmarContrasenia" name="confirmarContrasenia" required>
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <button type="submit" class="btn btn-primary">Cambiar Contraseña</button>
            </td>
        </tr>
    </table>
</form>

@if (ViewBag.TipoMensaje != null && ViewBag.Mensaje != null)
{
    <p class="mt-3 text-@(ViewBag.TipoMensaje == "EXITO" ? "success" : "danger")">@ViewBag.Mensaje</p>
}
